<?xml version="1.0" encoding="utf-8"?>
<com.homeraria.hencodeuicourse.app.phenas.ParticleControlLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111">

    <com.homeraria.hencodeuicourse.app.phenas.particle.CircleParticleView
        android:id="@+id/target"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/background_with_radius_border"/>

    <TextView
        android:id="@+id/desc"
        android:alpha="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_green_dark"
        android:text="test"
        android:layout_below="@id/target"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textSize="16dp"/>

    <ImageView
        android:id="@+id/screen_shot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/facebook_icon"
        android:alpha="0"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/target"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/control_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@android:color/white"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="20dp"
        android:gravity="center"
        android:text="收缩"/>

    <Button
        android:id="@+id/control_button2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@android:color/white"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/control_button"
        android:textSize="20dp"
        android:gravity="center"
        android:text="聚拢"/>

    <Button
        android:id="@+id/control_button0"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@android:color/white"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"
        android:gravity="center"
        android:text="RESET"/>

</com.homeraria.hencodeuicourse.app.phenas.ParticleControlLayout>