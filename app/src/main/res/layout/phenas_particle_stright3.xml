<?xml version="1.0" encoding="utf-8"?>
<com.homeraria.hencodeuicourse.app.phenas.ParticleControlLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111">

    <com.homeraria.hencodeuicourse.app.phenas.particle.CircleParticleView
        android:id="@+id/target"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/background_with_radius_border"/>

    <Button
        android:id="@+id/control_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@android:color/white"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="20dp"
        android:gravity="center"
        android:text="点击开始动画"/>

</com.homeraria.hencodeuicourse.app.phenas.ParticleControlLayout>