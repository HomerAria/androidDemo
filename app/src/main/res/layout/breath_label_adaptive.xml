<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.RevealLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reveal_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:clipChildren="false"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/target_text_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/background_green"
        android:gravity="center"
        android:lines="1"
        android:paddingStart="15dp"
        android:paddingTop="2dp"
        android:paddingEnd="15dp"
        android:paddingBottom="2dp"
        android:text="大佬你好"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.homeraria.hencodeuicourse.app.phenas.button.BreathView
            android:id="@+id/target"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical" />

        <com.homeraria.hencodeuicourse.app.phenas.button.BreathView
            android:id="@+id/target_bg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/background_green_circle" />

    </RelativeLayout>

    <TextView
        android:id="@+id/target_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/background_green"
        android:gravity="center"
        android:lines="1"
        android:paddingStart="15dp"
        android:paddingTop="2dp"
        android:paddingEnd="15dp"
        android:paddingBottom="2dp"
        android:text="大佬你好"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:visibility="invisible" />

</io.codetail.widget.RevealLinearLayout>