    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/outer_round"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        app:lottie_autoPlay="true"
        app:lottie_repeatMode="restart"
        app:lottie_fileName="phantom_round.json"
        app:lottie_speed="2"
        app:lottie_loop="true"/>

    <com.homeraria.component.widget.RoundView
        android:id="@+id/circle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="24dp"
        android:layout_centerInParent="true"
        android:alpha="0.8" />

    <View
        android:id="@+id/line"
        android:layout_width="2dp"
        android:layout_height="26dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:alpha="0.5"
        android:background="@android:color/white" />

    <com.homeraria.component.widget.ArcSideRectView
        android:id="@+id/center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp" />

    <com.homeraria.component.widget.ArcSideRectView
        android:id="@+id/function_a"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="37dp" />

    <com.homeraria.component.widget.ArcSideRectView
        android:id="@+id/function_b"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="37dp" />

    <com.homeraria.component.widget.ArcSideRectView
        android:id="@+id/function_c"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="37dp" />

    <com.homeraria.component.widget.ArcSideRectView
        android:id="@+id/border_a"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="36dp" />

    <com.homeraria.component.widget.ArcSideRectView
        android:id="@+id/border_b"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="36dp" />

    <com.homeraria.component.widget.ArcSideRectView
        android:id="@+id/border_c"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="36dp" />

</merge>